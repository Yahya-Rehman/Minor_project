                                        <canvas id="pieChart"></canvas>
                                    </div>
                                </div>
                            </div>
                            
                            <script>
                                // Course Chart
                                fetch('/admin/course-count')
                                .then(res => res.json())
                                .then(data => {
                                const labels = data.map(item => item.course_name);
                                const counts = data.map(item => item.count);

                                const ctx = document.getElementById('pieChart').getContext('2d');
                                new Chart(ctx, {
                                    type: 'pie',
                                    data: {
                                    labels: labels,
                                    datasets: [{
                                        label: 'Courses',
                                        data: counts,
                                        backgroundColor: ['#4BC0C0', '#9966FF', '#FF9F40', '#FF6384', '#36A2EB']
                                    }]
                                    }
                                });
                                });

